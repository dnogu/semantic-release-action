{
  "name": "semantic-release-action",
  "version": "0.0.1",
  "description": "Automated semantic versioning and release creation based on PR labels",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.js -o dist --source-map --license licenses.txt",
    "package": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "all": "npm run lint && npm run test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnogu/semantic-release-action.git"
  },
  "keywords": [
    "github-actions",
    "semantic-versioning",
    "release-automation",
    "ci-cd",
    "versioning"
  ],
  "author": "dnogu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dnogu/semantic-release-action/issues"
  },
  "homepage": "https://github.com/dnogu/semantic-release-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  }
}
